<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="WP Utility Coding Standards" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">

	<description>WP Utility Coding Standards</description>

	<!-- Scan all files in directory -->
	<file>.</file>

	<!-- Scan only PHP files -->
	<arg name="extensions" value="php"/>

	<!-- Show colors in console -->
	<arg name="colors"/>

	<!-- Show sniff codes in all reports -->
	<arg value="ps"/>

	<!-- Use parallel processing -->
	<arg name="parallel" value="8"/>

	<!-- Use Built North coding standards -->
	<rule ref="BuiltNorth"/>

	<!-- Directories to exclude -->
	<exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/node_modules/*</exclude-pattern>
	<exclude-pattern>/tests/*</exclude-pattern>
	<exclude-pattern>/coverage/*</exclude-pattern>
	<exclude-pattern>*.min.js</exclude-pattern>
	<exclude-pattern>*.min.css</exclude-pattern>

</ruleset>